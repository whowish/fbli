			<img src="/images/loading-food.gif">
		</div>
		<div id="header">
			<div id="navigator">
				<%= content_for?(:header) ? yield(:header) : (render :partial=>"layouts/header") %>  	
		    </div>
		</div>
		<div id="wrapper" class="clearfix">
			<div id="container">
		    	<%= content_for?(:frame) ? yield(:frame) : yield %>
